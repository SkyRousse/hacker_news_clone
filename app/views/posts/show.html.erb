<h1><%= @post.title %></h1>

<p><%= link_to 'add comment', new_post_comment_path(@post) %></p>

<% if @post.comments.any? %>
  <h4>Here are the comments for this post:</h4>

  <ul>
    <% @post.comments.each do |comment| %>
    <li>
      <p><%= comment.author %></p>
      <p><%= comment.content %></p>
      <%= link_to "edit comment", edit_post_comment_path(@post, comment) %>
      <%= link_to "delete comment", post_comment_path(@post, comment),
      :data => {:confirm => "Are you sure you want to delete this comment?",
        :method => "delete"} %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no comments yet!</p>
<% end %>


<p><%= link_to "edit this post", edit_post_path(@post) %></p>

<p><%= link_to "delete this post", post_path(@post),
                                  :data => {:confirm => "Are you sure you want to delete this post?",
                                            :method => "delete"} %></p>

<p><%= link_to "home", posts_path %></p>
