<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %>
      <%= form_for (post) do |f| %>
        <%= f.hidden_field(:votes, :value => post.votes + 1) %>
        <%= f.submit 'upvote' %>
      <% end %>
      <%= post.votes %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new post", new_post_path %>
